<%= javascript_include_tag "/assets/jquery.js"%>
<% if user_signed_in? && current_user.admin?%>

<p style="font-size:3em; line-height:2em; margin-top:20px;padding-bottom:20px;text-align:center; ">Listing feedbacks</h1>

<table>
  <tr>
	<th>Date Created</th>
    <th>Username/Email</th>
    <th>Body</th>
    <th>Go to?</th>
    <th>Homepage?</th>
	<th>Edit?</th>
	<th>Delete?</th>
  </tr>

<% @feedbacks.each do |f| %>

  <tr>
	<td width="10%"><p style="color:blue"><%= f.created_at.to_date.strftime("%m/%e/%Y").gsub(/^0/, '')%></p></td>
	<td width="12%">
	<% if f.user_id.nil?%>
	<%= f.email%>
	<% else %>
	<%= link_to User.find(f.user_id).username, User.find(f.user_id)%>
	<% end %>
	</td>
	
	<td width ="50%"><%= f.truncated100.html_safe %></td>
    <td width="7%"><p style="margin-left:11px"><%= link_to 'Go', f %></p></td>
	<td width="7%">
	<% if f.show %>
	<%= link_to (image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/hideReview.png"), "/feedbacks/#{f.id}/changeShow" %>
	<% else %>
	<%= link_to (image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/show_homepage.png"), "/feedbacks/#{f.id}/changeShow" %>
	<% end %>
    <td width="7%"><p style="margin-left:11px"><%= link_to 'Edit', edit_review_path(f) %></p></td>
    <td width="7%"><%= link_to 'Destroy', :controller => "feedbacks", :action => "destroy", :id =>f.id, :confirm => "Are you sure?" %></td>
  </tr>
<% end %>
</table>

<br />

<% end %>
