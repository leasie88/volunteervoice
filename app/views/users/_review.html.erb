<div> 
<%@photos = [] %>
 <%@photos << f.photo unless f.photo.blank?%>
 <%@photos << f.photo2 unless f.photo2.blank?%>
 <%@photos << f.photo3 unless f.photo3.blank?%>
<% @photos << f.photo4 unless f.photo4.blank?%>
<% @photos << f.photo5 unless f.photo5.blank?%>
<% @photos << f.photo6 unless f.photo6.blank?%>
<% @photos << f.photo7 unless f.photo7.blank?%>
<% @photos << f.photo8 unless f.photo8.blank?%>
<% @photos << f.photo9 unless f.photo9.blank?%>
<% @photos << f.photo10 unless f.photo10.blank?%>


	<br />
	<p style="margin-left:50px; font-size:1.1em;"><%=User.find(f.user_id).username%>'s Review of <a class="reviewOrgLink" href="/organizations/<%=Organization.find(Program.find(f.program_id).organization_id)%>"> <%=Organization.find(Program.find(f.program_id).organization_id).name%></a></p>
<p style="text-align:right; font-size:1.1em; margin-top:-15px"><%= f.created_at.to_date.strftime("%m/%e/%Y").gsub(/^0/, '')%></p>
	
<table cellspacing="0" border="0" cellpadding="0" width="100%" style="margin-left:20px; margin-right:20px; background-color:#E0EEEE; margin-top:5px">		
	<tr style="background-color:#E0EEEE">
		<td width="50%"><p style="font-size:1.2em; margin-left:50px;">Program: <%= Program.find(f.program_id).name %></td>
		<td width="20%"><p style="font-size:1.2em;">Trip Was: <%= Program.find(f.program_id).length %></td>
		<td ><p align="right" style="margin-top:-5px; margin-right:10px"><%=render :partial => 'star', :locals => {:star => f.overall}%></p></td>
</tr>
<tr style="background-color:#E0EEEE;">
	<td colspan="3"><p style="margin-left:10px; font-size:1.05em;margin-top:-10px;height:100px; width:96.5%; margin-left:2%; overflow:auto"><%= f.body.gsub("</p>", "<br />").gsub("<p>", "").html_safe %><a href="#flag-box<%=f.id%>" class="flag-window" id="flag-link<%=f.id%>"><%= (image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/flag.png") %></a></td>
</p></tr>
<tr style="background-color:#E0EEEE">
	<td colspan="3">
		<% @photos.each do |photo| %>
	  		  <a class="single" href="<%=photo.url%>" rel="lightbox[plants]"><img src="<%=photo.url%>" style="height:30px"/></a>
	    <% end %>
	</td>
</tr>
</table>

<table id="flag-box<%=f.id%>" class="flag-popup">
	<% @flag = Flag.new%>
	<% if user_signed_in? %>
  	<%= form_for @flag do |g| %>

	<tr style="background-color:#D9DEDA"><td colspan="2">
	    <p style="text-align:center; font-size:1.2em; font-family:cabinRegular;  color:#575758">Report this review for <br />inappropriate content</p></td></tr>

		<tr style="background-color:#D9DEDA;"><td colspan="2">
	<%=g.text_area :body, :style => "height:115px; font-size:0.9em; font-style:italic", :onclick => "if (this.value == 'Please describe.') {this.value = ''}; this.style.fontStyle = ('normal');", :value => "Please describe."%>

	    <%=g.hidden_field :flagger_id, :value => current_user.id %>

	    <%=g.hidden_field :poster_id, :value => f.user_id %>

	    <%=g.hidden_field :review_id, :value => f.id %>
		</td></tr>

		<tr style="background-color:#D9DEDA;"><td colspan="2">
	    <p style="text-align:center; padding-top:15px"><%= image_submit_tag ("https://s3-us-west-1.amazonaws.com/volunteervoice/images/submitFlag.png"), :height => "50px"%></p></td></tr>
		<% end %>
	<% else %>
	<tr><td>You must be signed in to flag a review.</td></tr>
	<% end %>

</table>


	
</div>

