<%= javascript_include_tag "/assets/jquery.js"%>
<p align="center" style="font-size:3em; line-height:2em; margin-top:20px; margin-bottom:20px">Listing flags</p>

<table>
  <tr>
	<th>Flag Category</th>
	<th>Poster</th>
    <th>Flagger</th>
    <th>Body</th>
	<th>View Review?</th>
    <th>View Flag?</th>
    <th>Edit?</th>
    <th>Destroy?</th>
  </tr>

<% @flags.each do |flag| %>
  <tr>
	<td width="13%"><%= flag.category%></td>
	<td width="5%"><%= User.find(flag.poster_id).username%></td>
	<td width="12%"><%= User.find(flag.flagger_id).username%></td>
	<td width="45%"><%= flag.body.html_safe%></td>
	<td width="10%"><%= link_to 'Review', Review.find(flag.review_id)%></td>
    <td width="7%"><%= link_to 'Flag', flag %></td>
    <td width="7%"><%= link_to 'Edit', edit_flag_path(flag) %></td>
    <td width="7%"><%= link_to 'Destroy', flag, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

