<%= javascript_include_tag "/assets/jquery.js"%>
<p align="center" style="font-size:3em; line-height:2em; margin-top:20px; margin-bottom:20px">Listing flags</p>

<table>
  <tr>
	<th>Flag Category</th>
	<th>Poster</th>
    <th>Flagger</th>
    <th>Body</th>
	<th>View Review?</th>
    <th>View Flag?</th>
    <th>Destroy?</th>
	<th>Show Review Anyway?</th>
  </tr>

<% @flags.each do |flag| %>
  <tr>
	<td width="13%"><%= flag.category%></td>
	<td width="5%">
	<% if !(User.where(:id => flag.poster_id).empty?)%>
	<%= User.find(flag.poster_id).username%>
	<% else %>
	<%= "???"%>
	<% end %>
	</td>
	<td width="12%">
	<% if !(User.where(:id => flag.flagger_id).empty?)%>
	<%= User.find(flag.flagger_id).username%>
	<% else %>
	<%= "???"%>
	<% end %></td>
	<td width="45%"><%= flag.body.html_safe%></td>
	<td width="10%"><%= link_to 'Review', Review.find(flag.review_id)%></td>
    <td width="7%"><%= link_to 'Flag', flag %></td>
    <td width="7%"><%= link_to 'Destroy', flag, confirm: 'Are you sure?', method: :delete %></td>
	<td width="7%"><% if f.flag_show %>
	<%= link_to (image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/hideReview.png"), :controller => "reviews", :action => "changeFlagShow", :id => f.review_id %>
	<% else %>
	<%= link_to (image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/show_homepage.png"), :controller => "reviews", :action => "changeFlagShow", :id => f.review_id %>
	<% end %>
  </tr>
<% end %>
</table>

<br />

