	<%= javascript_include_tag "/assets/jquery.js"%>
	
<style>
.top {
	font-size:2em; 
	margin-top:50px; 
	color:#575758;
}
.firstTitle {
	font-size:1.4em;
}
.secondTitle {
	font-size:0.8em;
}
.textArea {
	height:100px; 
	width:500px;
}
.submitContainer {
	text-align:center; 
	margin-top:-20px;
}
</style>
	
	
	<% @id = current_user.id unless current_user.nil?%>
	<div class="container">
		<div class="row">
			<div class="twelve columns top" align="center">
	
	<span class="firstTitle">You are unsubscribed!</span><br /><br /><br />
	
	<span class="secondTitle">Some feedback would be really helpful - </span><br /><br />
	<% @contact = Contact.new(:subject => "Subscription Termination Feedback (user)", :to_whom => "contact", :user_id => @id, :email => "nothing@nothing.com")%>
	<%= form_for(@contact) do |f| %>
	    <div class="field">
	      <%= f.text_area :body, :class => "textArea" %>
	<!-- This email is irrelevant, just used to pass the model's validations -->
		  <%= f.hidden_field :email, :value => "nothing@nothing.com"%>
		  <%= f.hidden_field :to_whom, :value => "contact"%>
		  <%= f.hidden_field :subject, :value => "Subscription Termination Feedback (organization)"%>
	    </div><br /><br />

	    <p class="submitContainer"><%= image_submit_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/sayIt.png", :onmousedown => "this.className = 'shadowed'", :onmouseup => "this.className = 'nothing'"%></p>

	<% end %>
	
	</div>
</div>
</div>