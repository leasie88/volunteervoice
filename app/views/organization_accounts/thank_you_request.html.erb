<%= javascript_include_tag "/assets/jquery.js"%>

<style>
#top {
	margin-top:30px;
}
#innerContainer {
	text-align:center;
}
.thanksInTouchImage {
	width:650px;
}
.lowerBlurb {
	margin-top:50px;
	font-family:JosefinSlabRegular; 
	color:#9bce6c; 
	font-size:2em;
	line-height:1.3em;
}
.logoContainer {
	text-align:center; 
	margin-top:75px;
}
</style>


<div class="container" id="top">
	<div class="row">
		<div class="twelve columns" id="innerContainer">

		<%= image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/YourRequestWasSent.png", :class => "thanksInTouchImage"%>
		
		<p class="lowerBlurb">We will email you a security link within 24 hours to the Primary Contact Email address that you included.  Thanks for using VolunteerVoice! </p>
		
		
<div class="logoContainer">		
<%= link_to (image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/logo.png"), root_path, :onmousedown => "this.className = 'shadowed'", :onmouseup => "this.className = 'nothing'"%>
</div>
</div>
</div>
</div>