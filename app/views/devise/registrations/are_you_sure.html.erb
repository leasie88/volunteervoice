<%= javascript_include_tag "/assets/jquery.js"%>
<div class="container" style="margin-top:70px">
	<div class="row">
		<div class="twelve columns" style="text-align:center">

		<%= image_tag "/assets/AreYouSure.png"%>
		
		<p style="margin-top:30px;font-family:museoSlab500Regular; color:#9bce6c; font-size:2em;">Goodbye forever? Really?</p><br /><br />
		
		
<div style="margin-top:75px">
	<div class="six columns" style="width:46%; text-align:right; margin-right:20px">		
