<br /><br />
<p style="font-size:3em; text-align:center; line-height:1.3em">Listing organizations</p><br />

<%= link_to 'Create New Organization', new_organization_path %>


<table align="center">
  <tr>
     <th>Name</th>
	<th># of Programs</th>
    <th>Description</th>
     <th>Image</th>
    <th>Delete?</th>
    <th>Edit?</th>
  </tr>

<% @organizations.each do |organization| %>
  <tr>
  	<td><%= link_to organization.name, organization %></td>
	<td><%= organization.programs.count %></td>
    <td><%= organization.description.html_safe %></td>
	<td><%= image_tag organization.square_image.url, :style => "height:100px;width:100px" %></td>
	<td><%= button_to "Delete", organization_path(organization.id), :method => :delete %></td>
	<td><%= link_to "Edit", edit_organization_path(organization) %></td>
  </tr>
<% end %>

</table>
